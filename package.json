{
  "repository": {
    "type": "git",
    "url": "https://github.com/LineGu/Lazy-Load.git"
  },
  "name": "lazy-load-helper",
  "version": "0.0.1",
  "module": "./src/index.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./esm/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./esm/plugin/index.mjs",
      "require": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./src/index.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "prepack": "yarn build",
    "build": "yarn clean && rollup -c && tsc --incremental false --declaration --emitDeclarationOnly --declarationDir dist",
    "test": "jest --runInBand --passWithNoTests",
    "clean": "rimraf ./dist ./esm",
    "lint": "eslint -c .eslintrc.js '{pages,src}/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
  },
  "peerDependencies": {
    "next": ">=13",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@babel/core": "^7.22.10",
    "@babel/runtime": "^7.23.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@babel/types": "^7",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/babel__core": "^7",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^22.10.1",
    "@types/prettier": "^2.6.3",
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "@types/rimraf": "^3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "next": "^15",
    "prettier": "^3.0.2",
    "react": "^19",
    "react-dom": ">=18",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "yarn@4.5.3"
}
